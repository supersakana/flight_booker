<%= form_with model: @booking do |f| %>
        <%= f.hidden_field :flight_id, :value => @flight.id %>

        <% i = 1 %>

            <%= f.fields_for :passengers do |p_form| %>
                <div class="flex flex-col mb-4 md:flex-row md:justify-between md:gap-6">
                    <h4 class="text-lg"><%= "Passenger #{i}" %><h4>
                    <%= p_form.text_field :name, placeholder: "Passenger's Name" %>
                    <%= p_form.text_field :email, placeholder: "name@example.com" %>
                </div>
                <% i += 1 %>
            <% end %>
            <%= f.submit "Submit" %>
        <% end %>
