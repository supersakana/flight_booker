<h1>Flight Booker</h1>

<%= form_with do |f| %>
    <%= f.label :departing_airport_id, "From" %>
    <%= f.select(:departing_airport_id, options_for_select(@departing_options)) %>

    <%= f.label :arriving_airport_id, "To" %>
    <%= f.select(:arriving_airport_id, options_for_select(@arriving_options)) %>

    <%= f.label :date, "Date" %>
    <%= f.date_select :date %>

    <%= f.label :passenger_count, "# of Passengers" %>
    <%= f.select(:passenger_count, [1, 2, 3, 4]) %>
    
    <%= submit_tag ("Search") %>
  <% end %>