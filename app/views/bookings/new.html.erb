<div class="flex flex-col justify-center h-screen mx-3">
    <h1 class="text-5xl mb-4 font-bold">Booking</h1>

    <div class="flex flex-col">
        <div class="mb-3">
            <h4 class="text-xl italic">Flight Details:</h4>
            <p>ID: <%= @flight.id %></p>
            <p>From: <%= @flight.from %></p>
            <p>To: <%= @flight.to %></p>
        </div>

        <div>
        <%= form_with model: @booking do |f| %>
        <%= f.hidden_field :flight_id, :value => @flight.id %>

            <%= f.fields_for :passengers do |p_form| %>
                <div class="flex">
                    <div class="flex m-2">
                        <%= p_form.label :name, "Name" %>
                        <%= p_form.text_field :name %>
                    </div>

                    <div class="flex m-2">
                        <%= p_form.label :email, "Email" %>
                        <%= p_form.text_field :email %>
                    </div>
                </div>
            <% end %>
            <%= f.submit "Book" %>
        <% end %>
        </div>
    </div>
</div>

