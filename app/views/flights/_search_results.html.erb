<h3 class="text-xl mb-2 font-bold">
<%= "#{@search_results[0].date.strftime("%B %d %Y")} | #{@search_results[0].from} - #{@search_results[0].to}"%>
</h3>

<%= form_with url: "bookings/new", method: :get do |f| %>

    <%= f.hidden_field :passenger_count, :value => @passengers %>

    <div class='flex flex-col items-center md:flex-none md:items-start'>
        <% @search_results.each do |flight| %>
            <div class='mt-3 md:mt-0'>
                <%= f.radio_button :flight_id, "#{flight.id}" %>
                <%= f.label :flight_id, "#{flight.time.strftime('%I:%M %p')}" %>
            </div>
        <% end %>

        <div class='mt-3'>
            <%= f.submit "Submit" %>
        </div>
    </div>
<% end %>